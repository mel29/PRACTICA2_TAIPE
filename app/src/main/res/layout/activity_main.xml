<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comic_neue_bold"
        android:text="Registro Liga 1"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <EditText
        android:id="@+id/txtNomTeam"
        android:layout_width="317dp"
        android:layout_height="0dp"
        android:layout_marginTop="143dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="Nombre del equipo"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/txtAnio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.207" />

    <EditText
        android:id="@+id/txtAnio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:hint="Año de fundación"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/txtNumTitulos"
        app:layout_constraintEnd_toEndOf="@+id/txtNomTeam"
        app:layout_constraintStart_toStartOf="@+id/txtNomTeam"
        app:layout_constraintTop_toBottomOf="@+id/txtNomTeam" />

    <EditText
        android:id="@+id/txtNumTitulos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:hint="Número de títulos ganados"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/txtURL"
        app:layout_constraintEnd_toEndOf="@+id/txtAnio"
        app:layout_constraintStart_toStartOf="@+id/txtAnio"
        app:layout_constraintTop_toBottomOf="@+id/txtAnio" />

    <EditText
        android:id="@+id/txtURL"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="URL de la imagen del equipo"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btnSave"
        app:layout_constraintEnd_toEndOf="@+id/txtNumTitulos"
        app:layout_constraintStart_toStartOf="@+id/txtNumTitulos"
        app:layout_constraintTop_toBottomOf="@+id/txtNumTitulos" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="270dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtURL" />

</androidx.constraintlayout.widget.ConstraintLayout>